<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        >

        <FrameLayout
            android:id="@+id/event_card_highlight"
            android:visibility="invisible"
            android:layout_width="6dp"
            android:background="#ff0000"
            android:layout_height="match_parent"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/lato_bold"
                android:text="Performance"
                android:textSize="24sp"
                android:typeface="normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="15dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:elevation="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/month"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="23dp"
                            android:paddingRight="23dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="@color/white"
                            android:background="#ff0000"
                            android:text="OCT"
                            />

                        <TextView
                            android:id="@+id/event_card_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:paddingTop="6dp"
                            android:textAlignment="center"
                            android:paddingBottom="9dp"
                            android:elevation="8dp"
                            android:text="5"
                            android:background="#fff"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:id="@+id/event_card_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reference Room"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <TextView
                    android:id="@+id/event_card_time"
                    android:text="1:00pm - 3:00 pm"
                    android:fontFamily="@font/lato"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <TextView
                    android:id="@+id/event_card_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/lato"
                    android:text="George Sherman Building, 775 Commonwealth Ave., MA, 02134"
                    android:textStyle="italic" />

                </LinearLayout>





        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightRed"
                android:elevation="1dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/event_card_add_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="10dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_event_card_add" />

                <ImageButton
                    android:id="@+id/event_card_like_button"

                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="10dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_event_card_like" />

                <ImageButton
                    android:id="@+id/event_card_share_button"

                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="10dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_share" />

                <ImageButton
                    android:id="@+id/event_card_location_button"

                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="10dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_location" />

            </LinearLayout>

            <TextView
                android:id="@+id/event_card_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:fontFamily="@font/lato_italic"
                android:text="Workshop description goes there. This is the best-ever workshop BU holds. Come and see fantastic artists perform amazing art shows. Join in our BU Global Music Festival!"
                android:textSize="18sp"
                android:typeface="serif" />


        </LinearLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>
